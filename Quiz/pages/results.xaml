<Page x:Class="Quiz.pages.results"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Quiz.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="results">

    <Grid Margin="10">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="resultsPanel">
                <!-- Results will be dynamically added here -->
            </StackPanel>
        </ScrollViewer>
        <Button x:Name="btnBackToMain" Content="Back to Main Page" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Click="BtnBackToMain_Click"/>
    </Grid>
</Page>
